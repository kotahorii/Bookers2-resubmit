<div class='container px-5 px-sm-0'>

   <div class="error_explanation" style="color: red; margin-top: 16px">
  <% if @book.errors.any? %>
  <h3><%= @book.errors.count %> errors prohibited this obj from being saved:</h3>
    <ul>
  <% @book.errors.full_messages.each do |message| %>
  <li>
    <%= message %>
  </li>
  <% end %>
  </ul>
<% end %>
</div>

  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <table class='table'>
  <tr><%= attachment_image_tag user, :profile_image, fallback: "no_image.jpg", size:"63x63"%></tr>
  <tr>
	  <th>name</th>
	  <th><%= user.name %></th>
  </tr>
  <tr>
	  <th>introduction</th>
	  <th><%= user.introduction %></th>
  </tr>
</table>

<div class='row'>
  <%= link_to edit_user_path(user.id), class:"btn btn-outline-secondary btn-sm btn-block" do %>
  <i class="fas fa-user-cog"></i>
  <% end %>
</div>
      <h2 class="mt-3">New book</h2>
      <%= form_with model: book, local:true do |f| %>
  <div class="form-group">
    <%= f.label :title %><br />
    <%= f.text_field :title, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :body, "Opinion" %><br />
    <%= f.text_area :body, class:"form-control" %>
  </div>
  <%= f.submit "Create Book", class:"btn btn-success" %>
<% end %>
</div>